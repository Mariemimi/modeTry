{% extends 'base.html.twig' %}

{% block title %}Hello MonProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <p>{{ app.user.nom }}</p>
  <p>{{ app.user.prenom }}</p>
  <p>{{ app.user.email }}</p>
  <p>{{ app.user.adresse }}</p>
  <p>{{ app.user.codePostal }}</p>
  <a href="{{ path('app_modification_profil', {'id': app.user.id }) }}">
  <button class"btn btn-lg btn-primary">Modifier</button></a>
</div>
{% endblock %}
